// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": {
				"base": "$tsc",
				"applyTo": "allDocuments"
			},
			"presentation": {
				"reveal": "always"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn":["generateParser"]
		},
		{
            "type": "shell",
            "label": "generateParser",
            "command": "peggy",
            "args": [
                "--plugin",
                "./node_modules/ts-pegjs/src/tspegjs",

                "--extra-options-file",
                "pegconfig.json",
                
                "-o",
                "server/src/ncParser.ts",
                
                "server/src/ncGrammar.pegjs"
            ],
        },
	]
}