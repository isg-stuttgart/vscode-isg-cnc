// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
			},
			"dependsOn": [
				"generateParser"
			]
		},
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": {
				"base": "$tsc",
				"applyTo": "allDocuments"
			},
			"presentation": {
				"reveal": "always"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"generateParser"
			]
		},
		{
			"label": "generateParser",
			"type": "shell",
			"command": "node ./server/parserGenerating/generateParser.js",
			"problemMatcher": [],
			"group": {
				"kind": "build"
			}
		}
	]
}